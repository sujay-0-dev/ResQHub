{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "app/dashboard/page.jsx", "app/layout.jsx", "app/page.jsx", "components/ui/alert.tsx", "components/auth-modal.jsx", "components/disaster-alerts.jsx", "components/location-tracker.jsx", "components/protected-route.jsx", "components/setup-notice.jsx", "components/sms-alert-system.tsx", "hooks/use-auth.js", "hooks/use-diasters.js", "hooks/use-location.js", "lib/supabase-client.js"],
  "exclude": ["node_modules"]
}
